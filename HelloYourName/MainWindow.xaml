<Window x:Class="HelloYourName.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloYourName"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Enter_Your_Name" HorizontalAlignment="Left" Margin="378,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" Width="127"><Run Text="Please Enter Your Name"/><LineBreak/><Run/></TextBlock>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Margin="378,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="21"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="516,270,0,0" VerticalAlignment="Top" Height="18" Click="okClick"/>

    </Grid>
</Window>
